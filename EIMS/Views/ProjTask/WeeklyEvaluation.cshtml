@model IEnumerable<EIMS.Models.ProjTaskModel>



<input type="hidden" id="weekId" value="@ViewBag.WeekId" />;
<input type="hidden" id="internId" value="@ViewBag.InternId "/>
<input type="hidden" id="projectId" value="@ViewBag.ProjId " />
 <h4>Week -  @ViewBag.WeekId Task Evaluation </h4>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3"><label>Intern ID</label></div>
                <div class="col-md-4"><label>Task Given</label></div>
                <div class="col-md-3"><label>Status</label></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="row"><button type="button" class="btn btn-success" id="btnView" /> View Comment </div>
        </div>
        <div class="col-md-3">
            <div class="row"><button type="button" class="btn btn-success" id="btnFeedback" /> Provide Feedback </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @foreach (var item in Model)
            {
                var msg = "";
                if (item.Status == 1) { msg = "Assigned"; }
                else if (item.Status == 2) { msg = "Progressing"; }
                else { msg = "Completed"; }
                <div class="row">
                    <div class="col-md-3">@item.InternId</div>
                    <div class="col-md-4">@item.TaskDes</div>
                    <div class="col-md-3">@msg </div>
                </div>
            }
        </div>
        <div class="col-md-3">
            <div class="row" id="divComment"></div>
        </div>
        <div class="col-md-3">
            <div class="row"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdlFeedback" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal" id="btnClose"><span aria-hidden="true">×</span></button>

                <h4 class="modal-title" id="myModalLabel">Feedback</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" >
                        <textarea id="txtFeedback"></textarea>
                        
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSave">Save</button>
               

            </div>
        </div>
    </div>
</div>

</div>
@section scripts {
   
<script src="~/ViewScript/WeeklyEvaluation.js"></script>

}



