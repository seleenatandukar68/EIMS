
@{
    ViewBag.Title = "viewAssignedMentor";
}

<div class="well" style="background-color:#5cb85c">
    <h3 class="text-center">Mentor Project Information</h3>
</div>

<div class="panel panel-body">

    <div class="col-md-12">
        <table class="display" id="MyDataTable2">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>

                    <th>
                        Project Id
                    </th>

                    <th>
                        First Name
                    </th>
                    <th>
                        Middle Name
                    </th>
                    <th>
                        Last Name
                    </th>




                </tr>
            </thead>
            <tbody></tbody>


        </table>



    </div>


</div>
<script>
    $(document).ready(function () {



        MentorList();
    })
    var MentorList = function () {

        $.ajax({

            type: "Get",
            url: "/Mentor/MentorList",
            success: function (response) {

                BindDataTable(response);

            }
        })

    }


    var BindDataTable = function (response) {

        $("#MyDataTable2").DataTable({
            searching: false,

            "aaData": response,
            "aoColumns": [

                { "mData": "Id" },
                { "mData": "ProjId" },
                { "mData": "FName" },
                { "mData": "MName" },
                 { "mData": "LName" },


            ]

        });
    }

</script>

