@model EIMS.Models.MentorModel

@{
    ViewBag.Title = "add";
}


<div class="well" style="background-color:#5cb85c">
    <h3 class="text-center">Add Mentor</h3>
</div>

@using (Html.BeginForm("AddMentor", "Mentor", FormMethod.Post))
